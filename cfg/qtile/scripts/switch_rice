#!/bin/bash 

input=$1
qdir="$HOME/.config/qtile"


case $input in
  --camila)
    echo "camila" > "$HOME/.rice.conf"
    ~/.config/qtile/scripts/autostart
    ;;
  --gotham)
    echo "gotham" > "$HOME/.rice.conf"
    ~/.config/qtile/scripts/autostart
    ;;
  --pacman)
    echo "pacman" > "$HOME/.rice.conf"
    ~/.config/qtile/scripts/autostart
    ;;
		*)
    echo "Invalid rice, only --camila, --gotham  and --pacman valid options."
    ;;
	esac


