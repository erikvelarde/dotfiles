#!/bin/bash

# Define the percentage by which to increase the microphone volume
percentage_increase=10

# Get the default source (input device) index (microphone)
source_index=$(pactl list short sources | awk '{print $1}')

# Get the current microphone volume
current_volume=$(pactl list sources | grep "Source #$source_index" -A 15 | grep 'Volume:' | awk '{print $5}' | sed -n '1p' | sed 's/%//')

# Calculate the new microphone volume
new_volume=$((current_volume + percentage_increase))

# Ensure the new volume is not greater than 100%
if [ $new_volume -gt 100 ]; then
  new_volume=100
fi

# Set the new microphone volume
pactl set-source-volume $source_index "${new_volume}%"

echo "Microphone volume increased by $percentage_increase% to ${new_volume}%"

