(defpoll current_wallpaper :interval "1s" "./scripts/wallpaper --wall")

(
  defwidget wallapaper_layout []
(box :class "image" :style "background-image: url('${current_wallpaper}')")
)

(
  defwindow wallpaper
    :wm-ignore true
    :windowtype "normal"
    :stacking "fg"
    :geometry (
      geometry 
        :x "0%"
        :y "0%"
        :height "10%"
        :width "10%"
        :anchor "center center"
    )
    (wallapaper_layout)
)
