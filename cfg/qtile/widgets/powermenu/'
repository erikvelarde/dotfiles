(
  defwidget powermenu_layout []
  (
    box 
    :class "powermenu_layout"
    :orientation "horizontal"
    :halign "center"
             :vexpand true
         :hexpand true
    :spacing 70
      (
        eventbox
          :cursor "pointer"
          (
            button 
        :class "btn powermenu_lock"
              "lock"
          )
      )

      (
        eventbox
          :cursor "pointer"
    (
            button 
              :class "btn powermenu_exit"
              "restart"
          )
      )

      (
        eventbox
          :cursor "pointer"
          (
            button 
        :class "btn powermenu_exit"
              "exit"
          )
      )
  )
)

(
  defwindow powermenu
  :stacking "bg"
    :windowtype "dock"
    :wm-ignore true
    :reserve (struts :distance "40px" :side "top")
    :geometry (
      geometry 
        :width "20%"
        :height "20%"
        :anchor "center center"
    )
    (powermenu_layout)
)

